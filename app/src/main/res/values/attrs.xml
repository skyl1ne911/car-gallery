<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DefaultAttributes">
        <attr name="orientation">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="MyLayout">
        <attr name="count" format="integer"/>

        <attr name="orientation"/>
        <attr name="offset_right" format="dimension"/>
        <attr name="offset_left" format="dimension"/>
        <attr name="offset_top" format="dimension"/>
        <attr name="offset_bottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CollageImageView">
<!--        to display the image    -->
        <attr name="resource" format="reference"/>

<!--        Positioning setting-->
<!--            - translateX is the horizontal setting -->
<!--            - translateY is the vertical setting -->
<!--            - rotate is a turn by degrees  -->
        <attr name="translateX" format="dimension"/>
        <attr name="translateY" format="dimension"/>
        <attr name="rotate" format="float"/>

        <attr name="lineStart">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="from_parent">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>

<!--        Line size Default size is 0 -->
        <attr name="lineSize" format="dimension"/>

<!--        Color line. Default color is WHITE    -->
        <attr name="color" format="reference|color"/>
    </declare-styleable>
</resources>