<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:id="@+id/activityListItem"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/bigCardImage"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:src="@drawable/chiron"
            android:scaleType="centerCrop"
            android:alpha="0"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView android:id="@+id/bigCardIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="26dp"
            android:layout_marginLeft="25dp"

            app:layout_constraintTop_toTopOf="@+id/bigCardImage"
            app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"/>

        <TextView android:id="@+id/bigCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="45dp"
            android:layout_marginLeft="25dp"

            android:fontFamily="@font/abel_regular"
            android:textSize="22sp"

            app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"
            app:layout_constraintBottom_toBottomOf="@+id/bigCardImage"/>

        <TextView android:id="@+id/bigCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginBottom="22dp"

            android:fontFamily="@font/tomorrow_light"
            android:textSize="14sp"

            app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"
            app:layout_constraintBottom_toBottomOf="@+id/bigCardImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
