<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:layout_marginTop="@dimen/marginTopCard"
    android:layout_marginLeft="@dimen/marginLeftRightCard"
    android:layout_marginRight="@dimen/marginLeftRightCard">

    <androidx.cardview.widget.CardView android:id="@+id/cardViewBig"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:cardCornerRadius="@dimen/cornerRadiusCard"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradient">

            <ImageView android:id="@+id/bigCardImage"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:src="@drawable/chiron"
                android:scaleType="centerCrop"
                android:alpha="0.2"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/bigCardIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="26dp"
                android:layout_marginLeft="23dp"

                app:layout_constraintTop_toTopOf="@+id/bigCardImage"
                app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"/>

            <TextView android:id="@+id/bigCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="23dp"
                android:layout_marginBottom="45dp"
                android:alpha="0.8"

                android:fontFamily="@font/abel_regular"
                android:textSize="22sp"

                app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"
                app:layout_constraintBottom_toBottomOf="@+id/bigCardImage"/>

            <TextView android:id="@+id/bigCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/tomorrow_light"
                android:textSize="14sp"
                android:alpha="0.8"

                android:layout_marginLeft="23dp"
                android:layout_marginBottom="22dp"

                app:layout_constraintLeft_toLeftOf="@+id/bigCardImage"
                app:layout_constraintBottom_toBottomOf="@+id/bigCardImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>